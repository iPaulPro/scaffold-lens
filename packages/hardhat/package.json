{
  "name": "@sl/hardhat",
  "version": "1.0.2",
  "scripts": {
    "account": "hardhat run scripts/listAccount.ts",
    "chain": "NODE_ENV=development hardhat node --network hardhat --no-deploy",
    "clean": "hardhat clean",
    "compile": "hardhat compile --show-stack-traces",
    "deploy:action:local": "NODE_ENV=development hardhat deploy --tags TestToken,MockModuleRegistry,YourActionModule,generateTsAbis",
    "deploy:action:mainnet": "NODE_ENV=production hardhat deploy --tags YourActionModule,generateTsAbis --network polygon",
    "deploy:action:testnet": "NODE_ENV=staging hardhat deploy --tags YourActionModule,generateTsAbis --network polygonAmoy",
    "deploy:collect:local": "NODE_ENV=development hardhat deploy --tags TestToken,ModuleRegistry,CollectNFT,CollectPublicationAction,YourCollectModule,generateTsAbis",
    "deploy:collect:mainnet": "NODE_ENV=production hardhat deploy --tags YourCollectModule,generateTsAbis --network polygon",
    "deploy:collect:testnet": "NODE_ENV=staging hardhat deploy --tags YourCollectModule,generateTsAbis --network polygonAmoy",
    "fork": "MAINNET_FORKING_ENABLED=true hardhat node --network hardhat --no-deploy",
    "generate": "NODE_ENV=development hardhat run scripts/generateAccount.ts",
    "flatten": "hardhat flatten",
    "lint": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore ./*.ts ./deploy/**/*.ts ./scripts/**/*.ts ./test/**/*.ts",
    "lint-staged": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore",
    "format": "prettier --write ./*.ts ./deploy/**/*.ts ./scripts/**/*.ts ./test/**/*.ts",
    "test": "REPORT_GAS=true hardhat test --network hardhat",
    "verify:mainnet": "NODE_ENV=production hardhat etherscan-verify --network polygon",
    "verify:testnet": "NODE_ENV=staging hardhat etherscan-verify --network polygonAmoy --api-url https://api-amoy.polygonscan.com"
  },
  "dependencies": {
    "@irys/sdk": "^0.1.1",
    "@lens-protocol/metadata": "^1.1.5",
    "@openzeppelin/contracts": "^4.8.1",
    "dotenv": "^16.0.3",
    "envfile": "^6.18.0",
    "qrcode": "^1.5.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@ethereum-waffle/mock-contract": "^4.0.4",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.3",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-verify": "^2.0.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/eslint": "^8",
    "@types/mocha": "^9.1.1",
    "@types/prettier": "^2",
    "@types/qrcode": "^1",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "chai": "^4.3.6",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^6.10.0",
    "hardhat": "^2.19.4",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-deploy": "^0.11.45",
    "hardhat-deploy-ethers": "^0.4.1",
    "hardhat-gas-reporter": "^1.0.9",
    "lens-modules": "^1.0.12",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.3.1",
    "solidity-coverage": "^0.8.7",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^5.1.6"
  }
}
