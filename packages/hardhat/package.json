{
  "name": "@sl/hardhat",
  "version": "1.1.0",
  "scripts": {
    "account": "hardhat run scripts/listAccount.ts",
    "chain": "NODE_ENV=local hardhat node-zksync",
    "clean": "hardhat clean",
    "compile": "hardhat compile --show-stack-traces",
    "deploy": "NODE_ENV=local hardhat deploy-zksync",
    "deploy:testnet": "NODE_ENV=staging hardhat deploy-zksync --network lensTestnet --tags AccountVerificationAction,LimitedRepliesPostRule,generateTsAbis",
    "generate": "NODE_ENV=local hardhat run scripts/generateAccount.ts",
    "flatten": "hardhat flatten",
    "lint": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore ./*.ts ./deploy/**/*.ts ./scripts/**/*.ts",
    "lint-staged": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore",
    "format": "prettier --write ./*.ts ./deploy/**/*.ts ./scripts/**/*.ts ./test/**/*.ts",
    "format-sol": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "test": "REPORT_GAS=true hardhat test --network hardhat",
    "verify:mainnet": "NODE_ENV=production hardhat etherscan-verify --network polygon",
    "verify:testnet": "NODE_ENV=staging hardhat verify --network lensTestnet 0xA7214006038D501271a1a770e4451bdcCb473Fb8"
  },
  "dependencies": {
    "@irys/sdk": "^0.1.1",
    "@lens-protocol/metadata": "^1.1.5",
    "@openzeppelin/contracts": "^4.9.6",
    "@typechain/ethers-v6": "^0.5.1",
    "dotenv": "^16.4.5",
    "envfile": "^7.1.0",
    "qrcode": "^1.5.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@ethereum-waffle/mock-contract": "^4.0.4",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.1",
    "@matterlabs/hardhat-zksync": "^1.3.0",
    "@matterlabs/zksync-contracts": "^0.6.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-verify": "^2.0.10",
    "@openzeppelin/contracts-upgradeable": "^4.9.6",
    "@typechain/hardhat": "^9.1.0",
    "@types/mocha": "^10.0.8",
    "@types/prettier": "^3.0.0",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "chai": "^4.5.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "ethers": "^6.13.2",
    "hardhat": "^2.22.10",
    "hardhat-dependency-compiler": "^1.2.1",
    "hardhat-deploy": "^0.12.4",
    "hardhat-deploy-ethers": "^0.4.2",
    "hardhat-gas-reporter": "^2.2.1",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1",
    "solidity-coverage": "^0.8.13",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "<5.6.0",
    "zksync-ethers": "^6.15.1"
  }
}
