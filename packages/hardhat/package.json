{
  "name": "@sl/hardhat",
  "version": "1.1.0",
  "scripts": {
    "account": "hardhat run scripts/listAccount.ts",
    "chain": "NODE_ENV=local hardhat node-zksync --show-calls all --show-vm-details all",
    "clean": "hardhat clean",
    "compile": "hardhat compile --show-stack-traces",
    "deploy": "hardhat deploy-zksync",
    "deploy:local": "NODE_ENV=local hardhat deploy-zksync --tags LensProtocol,Multicall,FollowingOnlyPostRule,generateTsAbis",
    "deploy:testnet": "NODE_ENV=staging hardhat deploy-zksync --network lensTestnet --tags FollowingOnlyPostRule,generateTsAbis",
    "generate": "NODE_ENV=local hardhat run scripts/generateAccount.ts",
    "flatten": "hardhat flatten",
    "lint": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore ./*.ts ./deploy/**/*.ts ./scripts/**/*.ts",
    "lint-staged": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore",
    "format": "prettier --write ./*.ts ./deploy/**/*.ts ./scripts/**/*.ts ./test/**/*.ts",
    "format-sol": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "test": "NODE_ENV=local REPORT_GAS=true hardhat test --network hardhat",
    "verify:mainnet": "NODE_ENV=production hardhat etherscan-verify --network polygon",
    "verify:testnet": "NODE_ENV=staging hardhat verify --network lensTestnet 0x6E99f25069e0203F666B9D7b4D449cB7F7a3D2f3 0xa82c8f5a03aeb2221abedb51d9e462afd9f63cd4"
  },
  "dependencies": {
    "@irys/sdk": "^0.1.1",
    "@openzeppelin/contracts": "4.9.6",
    "@typechain/ethers-v6": "^0.5.1",
    "dotenv": "^16.4.5",
    "envfile": "^7.1.0",
    "hardhat-ignore-warnings": "^0.2.12",
    "qrcode": "^1.5.4",
    "solady": "^0.1.8",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@ethereum-waffle/mock-contract": "^4.0.4",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.1",
    "@lens-chain/storage-client": "^1.0.4",
    "@lens-protocol/metadata": "^2.1.0",
    "@matterlabs/hardhat-zksync": "^1.3.0",
    "@matterlabs/zksync-contracts": "^0.6.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@openzeppelin/contracts-upgradeable": "^4.9.6",
    "@typechain/hardhat": "^9.1.0",
    "@types/mocha": "^10.0.8",
    "@types/prettier": "^3.0.0",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "chai": "^4.5.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "ethers": "^6.13.2",
    "hardhat": "^2.22.10",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-dependency-compiler": "^1.2.1",
    "hardhat-gas-reporter": "^2.2.1",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "<5.6.0",
    "zksync-ethers": "^6.15.1"
  }
}
