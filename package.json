{
  "name": "scaffold-lens",
  "version": "1.0.2",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "account": "yarn workspace @sl/hardhat account",
    "chain": "yarn workspace @sl/hardhat chain",
    "clean": "yarn workspace @sl/hardhat clean",
    "compile": "yarn workspace @sl/hardhat compile",
    "deploy:local": "yarn workspace @sl/hardhat deploy:local",
    "deploy:mumbai": "yarn workspace @sl/hardhat deploy:mumbai",
    "fork": "yarn workspace @sl/hardhat fork",
    "generate": "yarn workspace @sl/hardhat generate",
    "flatten": "yarn workspace @sl/hardhat flatten",
    "hardhat:lint": "yarn workspace @sl/hardhat lint",
    "hardhat:lint-staged": "yarn workspace @sl/hardhat lint-staged",
    "hardhat:format": "yarn workspace @sl/hardhat format",
    "hardhat:test": "yarn workspace @sl/hardhat test",
    "postinstall": "husky install",
    "next:check-types": "yarn workspace @sl/nextjs check-types",
    "next:format": "yarn workspace @sl/nextjs format",
    "next:lint": "yarn workspace @sl/nextjs lint",
    "precommit": "lint-staged",
    "prepare": "install-self-peers -- --ignore-scripts",
    "start": "yarn workspace @sl/nextjs dev",
    "test": "yarn hardhat:test",
    "vercel": "yarn workspace @sl/nextjs vercel",
    "vercel:yolo": "yarn workspace @sl/nextjs vercel:yolo",
    "verify": "yarn workspace @sl/hardhat verify"
  },
  "packageManager": "yarn@3.2.3",
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2"
  }
}
